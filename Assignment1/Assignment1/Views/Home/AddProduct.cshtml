@model Product
@{
    ViewBag.Title = "Add Product";
}
<h1>@ViewBag.Title</h1>

<form asp-action="Index" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="ProductCode">Code</label>
        <input asp-for="ProductCode" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ProductName">Name</label>
        <input asp-for="ProductName" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ProductYearlyPrice">Yearly Price</label>
        <input asp-for="ProductYearlyPrice" type="number" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ProuctReleaseDate">Release Date</label>
        <input asp-for="ProuctReleaseDate" type="date" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="submit" class="btn btn-primary">Cancel</button>
</form>
<p>Use this page to Add Technicians.</p>