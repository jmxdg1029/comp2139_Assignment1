@model Product
@{
    string title = "Edit Product";
}
<h2>@title</h2>

<form asp-action="EditProduct" method="post">
    <div asp-validation-summary="All" text-danger></div>

    <div class="form-group">
        <label asp-for="ProductCode">Code</label>
        <input asp-for="ProductCode" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ProductName">Name</label>
        <input asp-for="ProductName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ProductReleaseDate">Release Date</label>
        <input asp-for="ProductReleaseDate" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ProductYearlyPrice">Yearly Price</label>
        <input asp-for="ProductYearlyPrice" input type="number" min="1" step="any">
    </div>

    <input type="hidden" asp-for="ProductCode" />

    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-controller="Product" asp-action="ManageProduct" class="btn btn-primary">Cancel</a>
</form>