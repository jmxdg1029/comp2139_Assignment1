@model IncidentViewModel
@{ ViewBag.Title = "Incident Manager"; }
<h1>@ViewBag.Title</h1>
<div>
    <a class="btn btn-dark" asp-controller="Incident" asp-action="ManageIncident"> All Incidents </a>
    <a class ="btn btn-primary" style="color:white" asp-controller="Incident" asp-action="ManageIncidentU"> Unassigned Incidents </a>
    <a class="btn btn-dark" asp-controller="Incident" asp-action="ManageIncidentO"> Open Incidents </a>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Date Opened</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var incident in Model.Incident)
        {
            if (incident.TechnicianId == null ) {
                <tr>
                    <td>@incident.Title</td>
                    <td>@incident.Customer.CustomerLastName</td>
                    <td>@incident.Product.ProductName</td>
                    <td>@incident.DateOpened</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Incident" asp-action="EditIncident"
                           asp-route-id="@incident.IncidentId">Edit</a>
                        <a class="btn btn-primary" asp-controller="Incident" asp-action="DeleteIncident"
                           asp-route-id="@incident.IncidentId">Delete</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Incident" asp-action="AddIncident">Add New Incident</a>
