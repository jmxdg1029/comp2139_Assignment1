@model Incident
@{ string title = "Edit Incident"; }
<h2>@title</h2>

<form asp-action="EditIncident" method="post">
    <div asp-validation-summary="All" text-danger></div>

    <div class="form-group">
        <label asp-for="CustomerId">Name</label>
        <input asp-for="CustomerId" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Product">Product</label>
        <input asp-for="Product" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="DateOpened">Date opened</label>
        <input asp-for="DateOpened" class="form-control">
    </div>

    <input type="hidden" asp-for="IncidentId" />

    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-controller="Incident" asp-action="ManageIncident" class="btn btn-primary">Cancel</a>
</form>