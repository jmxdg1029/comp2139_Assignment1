@model Incident
@{ ViewBag.Title = "Delete Incident"; }
<h2>Confirm Deletion</h2>
<h3>@Model.CustomerName</h3>
<form asp-controller="Incident" asp-action="Delete" method="post">
    <input type="hidden" asp-for="IncidentId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Incident" asp-action="ManageIncident" class="btn btn-primary">Cancel</a>
</form>
