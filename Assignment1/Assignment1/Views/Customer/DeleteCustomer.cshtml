@model Customer
@{
    ViewBag.Title = "Delete Customer";
}
<h2>Confirm Deletion</h2>
<h3>@Model.CustomerFirstName @Model.CustomerLastName</h3>
<form asp-controller="Customer" asp-action="Delete" method="post">
    <input type="hidden" asp-for="CustomerId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Customer" asp-action="ManageCustomer" class="btn btn-primary">Cancel</a>
</form>